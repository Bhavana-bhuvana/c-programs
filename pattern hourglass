                 printf("* ");
            }
             else if(i==j||i+j==n-1){      //i==1&&j==5||i==2&&j==4||i==4&&j==2||i==5&&j==1){
                 printf("* ");
             }else{
                 printf("  ");
             } 
             
             
            
        }
        printf("\n");
    }
}
